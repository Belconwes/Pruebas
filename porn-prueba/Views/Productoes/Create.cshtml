@model porn_prueba.Models.Producto

@{
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Producto</h4>
